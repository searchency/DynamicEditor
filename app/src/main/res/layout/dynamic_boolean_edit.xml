<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/simple_view_margin_side"
        android:layout_marginRight="138dp"
        style="@style/BodyRegularBlack"
        android:text="Название"
        android:id="@+id/dbe_caption"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/simple_view_margin_side"
        android:layout_gravity="center_vertical|end"
        android:id="@+id/dbe_radiogroup"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dbe_yes"
            android:text="Да"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dbe_no"
            android:text="Нет"/>
    </RadioGroup>
</FrameLayout>